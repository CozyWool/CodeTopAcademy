<Window x:Class="BindingToElementWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingToElementWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel>
            <Button Content="Navy" Foreground="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Content="Blue" Foreground="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Content="Aqua" Foreground="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Content="Olive" Foreground="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Content="Green" Foreground="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Content="Red" Foreground="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
        </WrapPanel>
    </Grid>
</Window>
