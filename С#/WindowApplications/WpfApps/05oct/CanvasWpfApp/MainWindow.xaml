<Window x:Class="CanvasWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button Canvas.Left="10" Canvas.Top="10" Content="(10,10)"/>
        <Button Canvas.Left="100" Canvas.Top="50" 
                Content="(100,50)"
                Width="100" Height="70"
                Canvas.ZIndex="1"/>
        <Button Canvas.Left="70" Canvas.Top="100" 
                Content="(70,100)"
                Width="70" Height="30" Canvas.ZIndex="0"/>
    </Canvas>
</Window>
