<Window x:Class="FirstHomeWorkWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstHomeWorkWpfApp"
        mc:Ignorable="d"
        Title="First Homework WPF" Height="450" Width="800">
    <Grid ShowGridLines="False">
        <TextBlock Text="First Homework WPF" TextAlignment="Center" FontSize="26" Margin="5"/>
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Width="200">
            <Button Content="Task 1" Margin="5" Click="Task1_Click"/>
            <Button Content="Task 2" Margin="5" Click="Task2_Click"/>
        </StackPanel>
    </Grid>
</Window>
