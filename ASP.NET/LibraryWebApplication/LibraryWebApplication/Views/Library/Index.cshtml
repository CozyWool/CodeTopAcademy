<a asp-controller="Library" asp-action="Create" class="btn btn-primary mt-2">Создать</a>
<a asp-controller="Library" asp-action="FilterBooks" class="btn btn-secondary mt-2">Поиск</a>

<script type="text/javascript">
    document.getElementById("delete-btn").addEventListener("click", deleteBook);
    async function deleteBook(id) {
        try  {
            let confirmedDelete = confirm("Вы уверены, что хотите удалить эту книгу?")
            if (!confirmedDelete) return
            await fetch(`/library/` + id, {
                method: "DELETE",
                headers: { "Accept": "application/json", "Content-Type": "application/json" }
            });
            window.location.href = '/';
        } catch (error) {
            console.log(error);
            alert('Произошла ошибка при удалении');
        }
    }
</script>