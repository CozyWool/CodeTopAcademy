<Window x:Class="StorageWPF.ShowProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StorageWPF"
        mc:Ignorable="d"
        Title="ShowProductWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CheckBox Name="descCheckBox" Content="По убыванию" Checked="DescCheckBox_OnChecked" Margin="5" Unchecked="DescCheckBox_OnUnchecked"/>
        
        <DataGrid Grid.Row="1" Name = "dg" IsReadOnly="True"/>
    </Grid>
</Window>
